            const c = JSON.parse(courseJson);
            document.getElementById('enrollTitle').innerText = c.title;
            document.getElementById('enrollCourseId').value = c.id;
            
            const container = document.getElementById('classOptionsContainer');
            container.innerHTML = '';
            const btn = document.getElementById('btnConfirmEnroll');
            btn.disabled = true;
            btn.innerText = "Vui l√≤ng ch·ªçn l·ªõp";

            if (c.availableClasses && c.availableClasses.length > 0) {
