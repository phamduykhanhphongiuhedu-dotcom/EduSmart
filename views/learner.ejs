    <script>
        const userTokens = <%= user.wallet_tokens %>;

        // 1. T√åM KI·∫æM
        async function searchCourse() {
            const query = document.getElementById('searchInput').value;
            const resultBox = document.getElementById('searchResults');
            
            if (query.length < 2) { resultBox.style.display = 'none'; return; }

            const res = await fetch(`/api/search?q=${query}`);
            const courses = await res.json();

            resultBox.innerHTML = '';
            if (courses.length > 0) {
                resultBox.style.display = 'block';
                courses.forEach(c => {
                    const div = document.createElement('div');
                    div.className = 'search-item';
                    div.innerHTML = `<i class="fas fa-book-open me-2 text-muted"></i> <b>${c.title}</b> <span class="float-end text-primary fw-bold small">${c.price_tokens} Token</span>`;
