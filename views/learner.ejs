    <div class="modal fade" id="rateModal" tabindex="-1"><div class="modal-dialog modal-dialog-centered"><div class="modal-content border-0 shadow" style="border-radius: 20px;"><div class="modal-header border-0"><h5 class="modal-title fw-bold">ƒê√°nh gi√° ch·∫•t l∆∞·ª£ng</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div><div class="modal-body"><form action="/submit-review" method="POST"><input type="hidden" name="courseId" id="rateCourseId"><h5 class="text-center fw-bold text-primary mb-4" id="rateCourseTitle">T√™n kh√≥a h·ªçc</h5><div class="row mb-3"><div class="col-6"><label class="d-block fw-bold small mb-2 text-center">Ch·∫•t l∆∞·ª£ng m√¥n h·ªçc</label><select name="course_rating" class="form-select text-center fw-bold text-warning"><option value="5">5 ‚≠ê Xu·∫•t s·∫Øc</option><option value="4">4 ‚≠ê T·ªët</option><option value="3">3 ‚≠ê Kh√°</option><option value="2">2 ‚≠ê TB</option><option value="1">1 ‚≠ê K√©m</option></select></div><div class="col-6"><label class="d-block fw-bold small mb-2 text-center">Gi√°o vi√™n d·∫°y</label><select name="teacher_rating" class="form-select text-center fw-bold text-warning"><option value="5">5 ‚≠ê Nhi·ªát t√¨nh</option><option value="4">4 ‚≠ê D·ªÖ hi·ªÉu</option><option value="3">3 ‚≠ê B√¨nh th∆∞·ªùng</option><option value="2">2 ‚≠ê Kh√≥ hi·ªÉu</option><option value="1">1 ‚≠ê T·ªá</option></select></div></div><div class="mb-3"><label class="fw-bold small mb-1">Nh·∫≠n x√©t chi ti·∫øt</label><textarea name="comment" class="form-control bg-light" rows="3" placeholder="Chia s·∫ª c·∫£m nh·∫≠n..." required></textarea></div><button class="btn btn-warning w-100 fw-bold py-2 rounded-3">G·ª≠i ƒë√°nh gi√°</button></form></div></div></div></div>

    <div class="modal fade" id="logoutModal" tabindex="-1"><div class="modal-dialog modal-dialog-centered modal-sm"><div class="modal-content border-0 shadow rounded-4 text-center p-3"><div class="mb-3 mt-2 text-warning"><i class="fas fa-sign-out-alt fa-3x"></i></div><h5 class="fw-bold mb-2">ƒêƒÉng xu·∫•t?</h5><div class="d-flex gap-2 justify-content-center mt-4"><button type="button" class="btn btn-light fw-bold flex-fill rounded-pill" data-bs-dismiss="modal">Kh√¥ng</button><a href="/logout" class="btn btn-danger fw-bold flex-fill rounded-pill">C√≥</a></div></div></div></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const userTokens = <%= user.wallet_tokens %>;

        // UPLOAD AVATAR
        const avatarArea = document.getElementById('avatarArea');
        const avatarInput = document.getElementById('avatarInput');
        const avatarPreview = document.getElementById('avatarPreview');
        const avatarLetter = document.getElementById('avatarLetter');
        avatarArea.addEventListener('click', () => avatarInput.click());
        avatarArea.addEventListener('dragover', (e) => { e.preventDefault(); avatarArea.classList.add('avatar-drag-active'); });
        avatarArea.addEventListener('dragleave', () => avatarArea.classList.remove('avatar-drag-active'));
        avatarArea.addEventListener('drop', (e) => {
            e.preventDefault(); avatarArea.classList.remove('avatar-drag-active');
            if(e.dataTransfer.files.length > 0) handleFileUpload(e.dataTransfer.files[0]);
        });
        avatarInput.addEventListener('change', () => { if(avatarInput.files.length > 0) handleFileUpload(avatarInput.files[0]); });
        async function handleFileUpload(file) {
            const formData = new FormData(); formData.append('avatar', file);
            try { const res = await fetch('/upload-avatar', { method: 'POST', body: formData }); const data = await res.json();
                if(data.success) { avatarPreview.src = data.newAvatar; avatarPreview.classList.remove('d-none'); if(avatarLetter) avatarLetter.classList.add('d-none'); } 
                else { alert('L·ªói: ' + data.message); }
            } catch (err) { alert('L·ªói upload ·∫£nh!'); }
        }

        // T√åM KI·∫æM
        async function searchCourse() {
            const query = document.getElementById('searchInput').value;
            const resultBox = document.getElementById('searchResults');
            if (query.length < 2) { resultBox.style.display = 'none'; return; }
            const res = await fetch(`/api/search?q=${query}`); const courses = await res.json();
            resultBox.innerHTML = '';
            if (courses.length > 0) {
                resultBox.style.display = 'block';
                courses.forEach(c => {
                    const div = document.createElement('div'); div.className = 'search-item';
                    div.innerHTML = `<i class="fas fa-book-open me-2 text-muted"></i> <b>${c.title}</b>`;
                    div.onclick = () => showCourseDetail(c.id);
                    resultBox.appendChild(div);
                });
            } else { resultBox.style.display = 'none'; }
        }

        // HI·ªÜN CHI TI·∫æT
        async function showCourseDetail(id) {
            document.getElementById('searchResults').style.display = 'none';
            const res = await fetch(`/api/course/${id}`);
            const data = await res.json();
            
            document.getElementById('detailTitle').innerText = data.title;
            document.getElementById('detailTeacher').innerText = data.teacher_name;
            document.getElementById('detailImg').src = data.image_url;
            document.getElementById('detailPrice').innerHTML = `${data.price_tokens} Token <span class="fs-6 text-muted fw-normal">/ 1 Bu·ªïi</span>`;
            document.getElementById('rateCourse').innerText = data.stats.avgCourse;
            document.getElementById('rateTeacher').innerText = data.stats.avgTeacher;
            
            const classContainer = document.getElementById('classListContainer');
            classContainer.innerHTML = '';
            const btnEnroll = document.getElementById('btnEnroll');
            btnEnroll.disabled = true;
            btnEnroll.innerText = "Vui l√≤ng ch·ªçn l·ªõp";

            if (data.classes && data.classes.length > 0) {
                data.classes.forEach(cls => {
                    const available = cls.capacity - cls.enrolled;
                    const isFull = available <= 0;
                    const div = document.createElement('div');
                    div.className = `class-option ${isFull ? 'opacity-50' : ''}`;
                    div.innerHTML = `<div><div class="fw-bold text-dark">${cls.name}</div><div class="small text-muted"><i class="far fa-clock me-1"></i> ${cls.schedule}</div></div><div class="text-end"><div class="fw-bold ${isFull ? 'text-danger' : 'text-success'} small">${isFull ? 'ƒê√£ ƒë·∫ßy' : `C√≤n ${available} ch·ªó`}</div></div>`;
                    
                    if (!isFull) {
                        div.onclick = () => {
                            document.querySelectorAll('.class-option').forEach(el => el.classList.remove('selected'));
                            div.classList.add('selected');
                            document.getElementById('inputClassId').value = cls.id;
                            btnEnroll.disabled = false;
                            btnEnroll.innerText = "ƒêƒÉng k√Ω tham gia l·ªõp";
                        };
                    }
                    classContainer.appendChild(div);
                });
            } else {
                classContainer.innerHTML = '<div class="text-muted small fst-italic">Hi·ªán ch∆∞a c√≥ l·ªõp n√†o m·ªü ƒëƒÉng k√Ω.</div>';
            }

            document.getElementById('inputEnrollId').value = data.id;
            new bootstrap.Modal(document.getElementById('courseDetailModal')).show();
        }

        function validateClassSelection() {
            const classId = document.getElementById('inputClassId').value;
            if (!classId) { alert("B·∫°n ph·∫£i ch·ªçn m·ªôt l·ªõp h·ªçc ƒë·ªÉ ƒëƒÉng k√Ω!"); return false; }
            return true;
        }

        function confirmLogout() { new bootstrap.Modal(document.getElementById('logoutModal')).show(); }
        function openRateModal(id, title) {
            document.getElementById('rateCourseId').value = id;
            document.getElementById('rateCourseTitle').innerText = title;
            new bootstrap.Modal(document.getElementById('rateModal')).show();
        }
    </script>
</body>
</html>
